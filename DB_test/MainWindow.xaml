<Window x:Class="DB_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0" Margin="10" AutoGenerateColumns="True"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="StartSP" Content="Start" Width="150" Margin="10"
                    FontSize="28" FontWeight="DemiBold" Click="StartSP_Click"/>
            <TextBlock Text="Department ID:" FontSize="28" FontWeight="DemiBold" 
                       VerticalAlignment="Center"/>
            <TextBox Name="departmentID" Margin="5 20 5 20" Width="150"/>
            <TextBlock Text="Percent:" FontSize="28" FontWeight="DemiBold" 
                       VerticalAlignment="Center"/>
            <TextBox Name="percent" Margin="5 20 5 20" Width="150"/>
        </StackPanel>
    </Grid>    
</Window>
